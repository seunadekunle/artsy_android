<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Asssignment_4" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Asssignment_4" parent="Base.Theme.Asssignment_4" />

    <style name="Theme.Asssignment_4.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- background color shown behind your icon -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <!-- your adaptive icon foreground (ring + logo) -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- keep it transparent so the ring shows -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <!-- once the splash is dismissed, switch to your normal app theme -->
        <item name="postSplashScreenTheme">@style/Theme.Asssignment_4</item>
    </style>
</resources>